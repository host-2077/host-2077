WindowManager:
    HomeWindow:
    BikenameScreen:
    CcScreen:
    HpScreen:
    BikeweightScreen:
    UserweightScreen:
    CompanionweightScreen:
    MaxVelocityScreen:

<HomeWindow>:
    name: "home"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Bike App. \nVer. 1.1"
        Label:
            text: "host2077 \n2023"

        AnchorLayout:
            Button:
                size_hint: .2, .2
                pos_hint: { "center_x": .5 }
                text: "+"
                on_release: 
                    app.root.current = "bikename"

<BikenameScreen>:
    name: 'bikename'

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: dp(48)

        Label:
            text: 'Ingresa el nombre del vehículo:'
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            id: motorname
            multiline: False
            hint_text: 'Nombre del vehículo'
            size_hint_y: None
            height: dp(48)

        Button:
            text: 'Guardar y continuar'
            size_hint_y: None
            height: dp(48)
            on_release: root.on_save()

<CcScreen>:
    name: "cc_input"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Cilindraje"
        TextInput:
            id: tank_capacity_input

        AnchorLayout:
            Button:
                size_hint: .2, .2
                pos_hint: { "center_x": .5 }
                text: "Next"
                on_release: app.root.current = "hp_input"

<HpScreen>:
    name: "hp_input"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Caballos de fuerza"
        TextInput:
            id: tank_capacity_input

        AnchorLayout:
            Button:
                size_hint: .2, .2
                pos_hint: { "center_x": .5 }
                text: "Next"
                on_release: app.root.current = "bike_weight_input"

<BikeweightScreen>:
    name: "bike_weight_input"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Peso de la motocicleta"
        TextInput:
            id: tank_capacity_input

        AnchorLayout:
            Button:
                size_hint: .2, .2
                pos_hint: { "center_x": .5 }
                text: "Next"
                on_release: app.root.current = "user_weight_input"

<UserweightScreen>:
    name: "user_weight_input"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Peso del piloto"
        TextInput:
            id: tank_capacity_input

        AnchorLayout:
            Button:
                size_hint: .2, .2
                pos_hint: { "center_x": .5 }
                text: "Next"
                on_release: app.root.current = "companion_weight_input"

<CompanionweightScreen>:
    name: "companion_weight_input"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Ingresa el peso de tu acompañante.\nSi no tienes ingresa 0"
        
        TextInput:
            id: tank_capacity_input
            multiline: False
        
        Button:
            text: "Calculate"
            on_release: app.root.current = "maxvel"

<MaxVelocityScreen>:
    name: "maxvel"
    BoxLayout:
        id: box_layout
        orientation: "vertical"
        Label:
            text: "Calculate your maximum velocity"
            font_size: 30
        Button:
            text: "Calculate"
            size_hint: (1, 0.2)
            on_release: root.calculate_max_velocity()
        Label:
            text: ""
            id: max_velocity_label
            font_size: 25